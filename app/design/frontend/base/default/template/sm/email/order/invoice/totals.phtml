 * @see Mage_Sales_Block_Order_Totals
 */
?>
<?php 
    $_totals = $this->getTotals();
    $rowspan = count($_totals) + 1;
?>
<tr>
    <td style="height: 0" rowspan="<?php echo $rowspan?>">
        <strong style="text-transform:uppercase;color:#333;">Payment Method</strong>
        <div style="padding: 10px; border: 1px solid #9E9E9E">
            <?php echo $this->getParentBlock()->getPaymentHtml()?>
        </div>         
    </td>
    <td colspan="4" style="height: 0"></td>
</tr>
<?php foreach ($_totals as $_code => $_total): ?>
    <?php if ($_total->getBlockName()): ?>
        <?php echo $this->getChildHtml($_total->getBlockName(), false); ?>
    <?php else:?>
    <tr class="<?php echo $_code?>">
        <td <?php echo $this->getLabelProperties()?>>
            <?php if ($_total->getStrong()):?>
            <strong><?php echo $_total->getLabel()?></strong>
            <?php else:?>
            <?php echo $_total->getLabel()?>
            <?php endif?>
        </td>
        <td <?php echo $this->getValueProperties()?>>
            <?php if ($_total->getStrong()):?>
            <strong><?php echo $this->formatValue($_total) ?></strong>
            <?php else:?>
            <?php echo $this->formatValue($_total) ?>
            <?php endif?>
        </td>
    </tr>
    <?php endif?>
<?php endforeach?>                    

